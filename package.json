{
  "name": "unofficial-zalo",
  "version": "1.0.8",
  "revision": "20210918",
  "description": "Unofficial Zalo App",
  "repository": "SafeStudio/unofficial-zalo",
  "main": "app.js",
  "scripts": {
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "build": "electron-builder build",
    "build-all": "npx electron-builder build -mwl -p always",
    "build-windows": "npx electron-builder build --win -p always",
    "build-macos": "npx electron-builder build --mac -p always",
    "build-linux": "npx electron-builder build --linux -p always"
  },
  "build": {
    "appId": "tech.safestudio.unofficial-zalo",
    "productName": "Unofficial Zalo",
    "mac": {
      "category": "tech.safestudio.unofficial-zalo",
      "icon": "src/assets/icons/mac/icon.icns"
    },
    "linux": {
      "category": "Network",
      "target": [
        "snap",
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.xz",
        "tar.gz",
        "tar.bz2"
      ]
    }
  },
  "keywords": [
    "unofficial",
    "zalo",
    "electron",
    "cross-platform"
  ],
  "author": {
    "name": "Le Minh Tri",
    "email": "ansidev@gmail.com",
    "url": "https://ansidev.xyz/"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5"
  }
}
